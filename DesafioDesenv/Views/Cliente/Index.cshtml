@model IEnumerable<DesafioDesenv.Models.Cliente>

@{
    ViewBag.Title = "Página Principal";
}




<div class="tabelaLista">
    <h2>Página Inicial - Lista de Clientes</h2>
    <p>
        @Html.ActionLink("Criar novo Cliente", "Create")
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sobrenome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.dataDeNascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Telefone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>Ações</th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tbody>
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sobrenome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dataDeNascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Telefone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.clienteID }, new { @class = "btn btn-primary btn-sm" }) 
                        @Html.ActionLink("Detalhes", "Details", new { id = item.clienteID }, new { @class = "btn btn-info btn-sm" }) 
                        @Html.ActionLink("Deletar", "Delete", new { id = item.clienteID }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            </tbody>
        }

    </table>
</div>